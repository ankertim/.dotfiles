set encoding=utf-8

syntax on
set number
set backspace=2
set shiftwidth=4
set tabstop=4
set expandtab

set ruler
set smartindent
set hlsearch
set incsearch
set mouse=a
set ic
set ai
set history=500
set listchars=tab:>.,trail:~,extends:>,precedes:<
set list

let &t_SI="\e[6 q"
let &t_EI="\e[1 q"

set t_Co=256
set statusline=2
